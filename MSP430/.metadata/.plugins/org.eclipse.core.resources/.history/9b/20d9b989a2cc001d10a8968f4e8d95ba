#ifndef TIM_B_H
#define TIM_B_H


#include <msp430.h>
#include "driverlib.h"
#include "step_motor.h"

void TIM_B_init();

void TIM_B_init(void)
{
    // TASSEL_1 ACLK（32768Hz）以及TASSEL_2 SMCLK（1.045MHz）
    TB1CTL = TBSSEL__SMCLK | ID_0 | MC_1 | TBIE | TBCLR;

    TB0CCR0 = CIRCLE; //计数周期
    TB0CCTL0 = CCIE; //使能中断 中断允许
    TB0CTL &= ~TBIFG; // 清除定时器1中断标志位
    TB0R = 0;
}



#endif /* TIM_B_H_ */
